{
	"name": "vscode-velociraptor",
	"displayName": "Velociraptor",
	"description": "Velociraptor support for VSCode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vr.run"
	],
	"main": "./out/extension.js",
	"contributes": {
		"jsonValidation": [
			{
				"fileMatch": "velociraptor.json",
				"url": "./out/schema.json"
			},
			{
				"fileMatch": "scripts.json",
				"url": "./out/schema.json"
			}
		]
	},
	"scripts": {
		"build:jsonschema": "mkdir -p out && ts-json-schema-generator --path velociraptor/src/scripts_config.ts --type ScriptsConfiguration -o out/schema.json",
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"ts-json-schema-generator": "^0.68.0",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
